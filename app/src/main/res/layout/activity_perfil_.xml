<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfil_Activity">

      <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Mi informaciÃ³n"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="173dp"
        android:layout_height="142dp"
        android:src="@drawable/ic_restaurant"
        android:layout_gravity="center"/>


    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
        android:id="@+id/txtNombresP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#ccc"
        android:enabled="false"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawableTint="#ADACAC"
        android:paddingStart="8dp"/>

    <EditText
        android:id="@+id/txtApellidoP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#ccc"
        android:enabled="false"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawableTint="#ADACAC"
        android:paddingStart="8dp"/>

    <EditText
        android:id="@+id/txtDireccionP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Direccion"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#ccc"
        android:enabled="false"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:drawableTint="#ADACAC"
        android:paddingStart="8dp"/>
            <EditText
            android:id="@+id/txttelefonoP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:maxLength="10"
            android:hint="Telefono"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textColorHint="#ccc"
            android:enabled="false"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:drawableTint="#ADACAC"
         android:paddingStart="8dp"/>

     <EditText
         android:id="@+id/txtCorreoP"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginBottom="15dp"
         android:background="#00000000"
         android:drawableLeft="@drawable/ic_email_black_24dp"
         android:ems="10"
         android:enabled="false"
         android:hint="Correo"
         android:inputType="textEmailAddress"
         android:paddingLeft="20dp"
         android:paddingTop="10dp"
         android:paddingRight="10dp"
         android:paddingBottom="10dp"
         android:textColor="#000000"
         android:textColorHint="#ccc"
         android:drawableTint="#ADACAC"
         android:paddingStart="8dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGuardarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="Guardar"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:visibility="invisible"
            android:background="@drawable/btn_rounded"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnEditPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="Editar"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:background="@drawable/btn_rounded"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>